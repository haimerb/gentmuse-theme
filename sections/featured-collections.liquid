<section class="featured-collections">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    
    <div class="collections-grid">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% assign collection = collections[block.settings.collection] %}
          {% if collection != blank %}
            <div class="collection-item" {{ block.shopify_attributes }}>
              <a href="{{ collection.url }}">
                {% if collection.featured_image %}
                  <img src="{{ collection.featured_image | img_url: '800x' }}" alt="{{ collection.title }}" loading="lazy">
                {% elsif collection.products.first.featured_image %}
                  <img src="{{ collection.products.first.featured_image | img_url: '800x' }}" alt="{{ collection.title }}" loading="lazy">
                {% else %}
                  <div class="placeholder-image">{{ collection.title }}</div>
                {% endif %}
                <h3>{{ collection.title }}</h3>
                <p>{{ collection.products_count }} productos</p>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      {% else %}
        {%- comment -%} Si no hay bloques configurados, mostrar todas las colecciones {%- endcomment -%}
        {% for collection in collections limit: 5 %}
          {% unless collection.handle == 'frontpage' %}
            <div class="collection-item">
              <a href="{{ collection.url }}">
                {% if collection.featured_image %}
                  <img src="{{ collection.featured_image | img_url: '800x' }}" alt="{{ collection.title }}" loading="lazy">
                {% elsif collection.products.first.featured_image %}
                  <img src="{{ collection.products.first.featured_image | img_url: '800x' }}" alt="{{ collection.title }}" loading="lazy">
                {% else %}
                  <div class="placeholder-image">{{ collection.title }}</div>
                {% endif %}
                <h3>{{ collection.title }}</h3>
                <p>{{ collection.products_count }} productos</p>
              </a>
            </div>
          {% endunless %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore Our Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
