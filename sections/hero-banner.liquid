<section class="hero-banner">
  <div class="hero-content">
    {% if section.settings.show_video and section.settings.video_url != blank %}
      <video class="hero-video" autoplay loop muted playsinline>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% elsif section.settings.hero_image != blank %}
      <img src="{{ section.settings.hero_image | img_url: '1920x' }}" alt="{{ section.settings.hero_title }}" loading="lazy">
    {% else %}
      <video class="hero-video" autoplay loop muted playsinline>
        <source src="{{ 'gent-muse-logo-animation.mp4' | asset_url }}" type="video/mp4">
      </video>
    {% endif %}
    
    <div class="hero-text">
      {% if section.settings.hero_eyebrow != blank %}
        <span class="hero-eyebrow">{{ section.settings.hero_eyebrow }}</span>
      {% endif %}
      <h1>{{ section.settings.hero_title }}</h1>
      <p>{{ section.settings.hero_subtitle }}</p>
      {% if section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="btn-primary">{{ section.settings.cta_text }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_video",
      "label": "Show Video",
      "default": true
    },
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image (Fallback)"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Title",
      "default": "Personal care elevated to ritual"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Subtitle",
      "default": "The perfect fusion between strength and sensitivity, where classic rituals meet contemporary design."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Discover the ritual"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "hero_eyebrow",
      "label": "Eyebrow text",
      "default": "Gent & Muse"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
