<header class="site-header">
  <div class="container">
    <div class="header-wrapper">
      <button class="mobile-menu-toggle" aria-label="{{ 'header.menu' | t }}">
        <span></span>
        <span></span>
        <span></span>
      </button>
      
      <div class="logo">
        {% if section.settings.logo != blank %}
          <a href="{{ routes.root_url }}" aria-label="{{ shop.name }}">
            <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" width="200" height="auto" loading="eager">
          </a>
        {% else %}
          <a href="{{ routes.root_url }}" aria-label="{{ shop.name }}">
            <img src="{{ 'gent-muse-logo.svg' | asset_url }}" alt="{{ shop.name }}" width="200" height="auto" loading="eager">
          </a>
        {% endif %}
      </div>
      
      <nav class="main-nav" role="navigation" aria-label="Main navigation">
        <ul>
          {% for link in linklists[section.settings.menu].links %}
            <li>
              <a href="{{ link.url }}" {% if link.active %}aria-current="page"{% endif %}>
                {{ link.title }}
              </a>
              {% if link.links != blank %}
                <ul class="dropdown">
                  {% for child_link in link.links %}
                    <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
                  {% endfor %}
                </ul>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </nav>
      
      <div class="header-icons">
        {% if section.settings.enable_language_selector and localization.available_languages.size > 1 %}
          <div class="language-selector">
            <button type="button" class="language-toggle" aria-label="{{ 'general.language.dropdown_label' | t }}">
              {{ localization.language.iso_code | upcase }}
            </button>
            <div class="language-dropdown">
              {% for language in localization.available_languages %}
                <a href="#" 
                   data-language-code="{{ language.iso_code }}"
                   class="language-option {% if language.iso_code == localization.language.iso_code %}active{% endif %}">
                  {{ language.endonym_name }}
                </a>
              {% endfor %}
            </div>
          </div>
        {% endif %}
        
        <a href="{{ routes.search_url }}" class="search-icon" aria-label="{{ 'header.search' | t }}">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
          <span class="desktop-only">{{ 'header.search' | t }}</span>
        </a>
        <a href="{{ routes.account_url }}" class="account-icon" aria-label="{{ 'header.account' | t }}">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          <span class="desktop-only">{{ 'header.account' | t }}</span>
        </a>
        <a href="{{ routes.cart_url }}" class="cart-icon" aria-label="{{ 'header.cart' | t }}">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <span class="desktop-only">{{ 'header.cart' | t }} <span class="cart-count">{{ 'header.items_count' | t: count: cart.item_count }}</span></span>
        </a>
      </div>
    </div>
  </div>
</header>

<style>
.mobile-menu-toggle {
  display: none;
  flex-direction: column;
  background: none;
  border: none;
  cursor: pointer;
  padding: 10px;
  z-index: 1001;
}

.mobile-menu-toggle span {
  width: 25px;
  height: 2px;
  background: var(--color-white);
  margin: 3px 0;
  transition: var(--transition);
}

.mobile-menu-toggle.active span:nth-child(1) {
  transform: rotate(45deg) translate(5px, 5px);
}

.mobile-menu-toggle.active span:nth-child(2) {
  opacity: 0;
}

.mobile-menu-toggle.active span:nth-child(3) {
  transform: rotate(-45deg) translate(7px, -6px);
}

@media (max-width: 768px) {
  .mobile-menu-toggle {
    display: flex;
  }
  
  .main-nav {
    position: fixed;
    top: 0;
    left: -100%;
    width: 80%;
    height: 100vh;
    background: var(--color-black);
    padding: 100px 30px 30px;
    transition: var(--transition);
    z-index: 999;
  }
  
  .main-nav.active {
    left: 0;
  }
  
  .main-nav ul {
    flex-direction: column;
    gap: 20px;
  }
  
  .desktop-only {
    display: none;
  }
  
  .header-icons {
    gap: 15px;
  }
}

.language-selector {
  position: relative;
}

.language-toggle {
  background: none;
  border: 1px solid rgba(255, 255, 255, 0.3);
  color: var(--color-white);
  padding: 8px 15px;
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 2px;
  cursor: pointer;
  transition: var(--transition);
  border-radius: 4px;
}

.language-toggle:hover {
  border-color: var(--color-gold);
  color: var(--color-gold);
}

.language-dropdown {
  position: absolute;
  top: calc(100% + 10px);
  right: 0;
  background: var(--color-black);
  border: 1px solid rgba(201, 169, 97, 0.3);
  min-width: 150px;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: var(--transition);
  z-index: 1000;
  box-shadow: var(--shadow-lg);
}

.language-selector:hover .language-dropdown {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.language-option {
  display: block;
  padding: 12px 20px;
  color: var(--color-white);
  text-decoration: none;
  font-size: 13px;
  letter-spacing: 1px;
  transition: var(--transition);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.language-option:last-child {
  border-bottom: none;
}

.language-option:hover,
.language-option.active {
  background: rgba(201, 169, 97, 0.1);
  color: var(--color-gold);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Language switcher
  const languageOptions = document.querySelectorAll('.language-option');
  
  languageOptions.forEach(option => {
    option.addEventListener('click', function(e) {
      e.preventDefault();
      const languageCode = this.getAttribute('data-language-code');
      
      // Update URL with language parameter
      const url = new URL(window.location.href);
      url.searchParams.set('locale', languageCode);
      window.location.href = url.toString();
    });
  });
});
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "label": "Enable language selector",
      "default": true
    }
  ]
}
{% endschema %}
